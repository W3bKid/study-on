{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Character_code</th>
                <td>{{ course.characterCode }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
        </tbody>
    </table>



    <h1>Lessons</h1>
    <ul>
        {% for key, lesson in lessons %}
            <li><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.title }}</a>

        {% endfor %}
    </ul>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    <a href="{{ path('app_course_new') }} ">new course</a>

    <a class="btn btn-outline-secondary" href="{{ path('app_lesson_new', {'course_id': course.id}) }}">Добавить урок</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
